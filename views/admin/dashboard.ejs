<div class="d-flex justify-content-between align-items-center flex-wrap flex-md-nowrap pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h1">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/api/admin/dashboard/addUser" class="btn btn-sm btn-outline-secondary">
                + Add User
            </a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Telephone</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>

        <tbody>
            <% users.forEach(user=> { %>

                <tr class="align-middle">
                    <td>
                        <%= user.firstName %>
                    </td>
                    <td>
                        <%= user.lastName %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.tel %>
                    </td>
                    <td>
                        <div class="d-flex flex-row justify-content-end gap-2">
                            <a href="/api/admin/dashboard/view/<%= user._id %>" type="button"
                                class="btn btn-primary btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="/api/admin/dashboard/edit/<%= user._id %>" type="button"
                                class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <!-- <form id="deleteUserHome" class="position-relative" action="">
                  <input type="hidden" id="userID" value="<%= user._id %>">
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-person-x"></i>
                  </button>
                </form> -->
                        </div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/pagination') %>