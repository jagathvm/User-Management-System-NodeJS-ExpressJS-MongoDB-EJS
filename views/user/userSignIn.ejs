<div class="wrapper sign-in">
  <!-- Sign In -->
  <div class="form-wrapper sign-in">
    <form id="formSignIn">
      <h2>Sign In</h2>
      <div class="input-group">
        <input type="email" name="email" autocomplete="off" required>
        <label for="email">Email</label>
      </div>
      <div class="input-group">
        <input type="password" name="password" autocomplete="off" required>
        <label for="password">Password</label>
      </div>
      <div class="remember">
        <label for="checkbox_id">
          <input type="checkbox" name="checkbox" id="checkbox_id" value="value" required>
          Remember Me
        </label>
      </div>
      <button type="submit">Sign In</button>
      <div class="signUp-Link">
        <p>Don't have an account? <a href="/api/user/signup" class="signUpBtn-Link">Sign Up</a></p>
      </div>
    </form>
  </div>
</div>

<script type="module" async src="/scripts/user/userSignIn.js"></script>
