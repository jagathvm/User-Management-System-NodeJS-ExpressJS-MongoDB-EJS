<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link rel="stylesheet" href="./stylesheets/styles.css">
</head>

<body>
    <div class="wrapper sign-up">
        <!-- Sign Up -->
        <div class="form-wrapper sign-up">
            <form id="formSignUp" action="" method="post">
                <h2>Sign Up</h2>
                <div class="input-group">
                    <input autocomplete="off" type="email" id="email" name="email" required>
                    <label for="email">Email</label>
                </div>
                <div class="input-group">
                    <input autocomplete="off" type="text" id="username" name="username" required>
                    <label for="username">Username</label>
                </div>
                <div class="input-group">
                    <input autocomplete="off" type="password" id="password" name="password" required>
                    <label for="password">Password</label>
                </div>
                <div class="input-group">
                    <input autocomplete="off" type="password" id="passwordConfirm" name="passwordConfirm" required>
                    <label for="passwordConfirm">Confirm Your Password</label>
                </div>
                <div class="remember">
                    <label for="checkbox_id2">
                        <input type="checkbox" name="checkbox" id="checkbox_id2" value="value" required>
                        By signing up, you agree to our Terms, Privacy Policy and Cookies Policy.
                    </label>
                </div>
                <button type="submit" id="signUp">Signup</button>
                <div class="signIn-Link">
                    <p>Already have an account? <a href="/api/user/" class="signInBtn-Link">Sign In</a></p>
                </div>
                <p id="demo"></p>
            </form>
        </div>
    </div>

    <script src="../public/scripts/user.js"></script>
</body>

</html>